
.nav {
	margin-top: 0;
	display: flex;
}
.nav-left {
	margin-top: 0;
	width: 50%;
	white-space: nowrap;
	display: flex;
}
.nav-left-item {
	height: 120rpx;
	font-size: 32rpx;
	display: inline-block;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #e6e6e6;
	color: #484242;
	margin-bottom: 4rpx;
}
.garbage-gan {
	background-color: rgb(44, 43, 39);
	color: #FFFFFF;
}
.garbage-shi {
	background-color: rgb(34, 139, 34);
	color: #FFFFFF;
}
.garbage-huishou {
	background-color: rgb(36, 71, 131);
	color: #FFFFFF;
}
.garbage-youhai {
	background-color: rgb(229, 49, 34);
	color: #FFFFFF;
}
.garbage-gan-border {
	border-left: 10rpx solid rgb(44, 43, 39);
}
.garbage-shi-border {
	border-left: 10rpx solid rgb(34, 139, 34);
}
.garbage-huishou-border {
	border-left: 10rpx solid rgb(36, 71, 131);
}
.garbage-youhai-border {
	border-left: 10rpx solid rgb(229, 49, 34);
}
.nav-right {
	width: 100%;
}
.nav-right-item {
	margin-top: 0;
	height: 10rpx;
	padding: 28rpx;
	font-size: 32rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	border-radius: 10rpx;
}
.style1{
	background-color: #f5f5f5;
}
.active {
	color: #F24544;
}
.padding {
	width: 100%;
	top: 0;
	position: fixed;
	background-color: #F24544;
}
.content {
	width: 100%;
}
.view-img{
	height: 50%;
	display: flex;
	flex-direction:column;
	align-items: center;
	justify-content: center;
}
.show-img{
	width:400rpx;
	height:500rpx;
}
::-webkit-scrollbar {
   width: 0;
   height: 0;
   color: transparent;
}

